<p style="color: green"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Address</th>
    </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.name, supplier%></td>
        <td><%= supplier.email_address%></td>
        <td><%= supplier.address%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p></p>

<%= link_to "New supplier", new_supplier_path %>
